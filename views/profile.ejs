<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
    <script src="https://use.fontawesome.com/f6ba9fa57d.js"></script>

    <style type="text/css">
      .card-img-top {
          width: 100%;
          height: 15vw;
          object-fit: cover;
      }
       body{
        padding-top: 100px;
        background: #FFF0F5
      }
      .navbar-light{
        background-color: #FF69B4;
      }
      .navbar{
        min-height: 70px;
      }
      .text{
        font-family: 'Lobster', cursive; 
      }
      .fotter{
        background-color: #FFB6C1;
        max-height: 70px;
        margin: 0px auto;
        padding: 20px 0px;
      }
    </style>

    <title>My profile</title>
  </head>
  <body>
	
    <nav class="navbar navbar-light navbar-expand-sm fixed-top">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#Navbar">
            <span class="navbar-toggler-icon"></span>
        </button>
      <div class="collapse navbar-collapse" id="Navbar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active"><a class="nav-link text" href="/Buysell" style="font-size: 1.2rem"><span class="fa fa-home fa-lg"></span> Home</a></li>
                </ul>
            </div>
    </nav>


    <div class="container" style="margin-bottom: 100px">
      <div class="row justify-content-center">
        <div class="col-md-5">
          <img src="<%= currentUser.googleData._json.picture %>" class="img-fluid ml-md-4 mt-md-4" alt="user image" style="border-radius: 50%">
        </div>
        <div class="col-md-5">
          <h2 class="mt-md-5 ml-auto"> <%= currentUser.googleData.displayName %></h2>
          <p class="lead" class="mt-md-5 ml-auto"> <%= currentUser.googleData._json.email %> </p>
        </div>
      </div>
		<div class="wrapper-shop-items col-lg-8">
							<div class='row'>
								<% items.forEach(function(i) { %>
								<% if(currentUser && i.author.id.equals(currentUser._id)){ %>
									<div class="d-flex justify-content-around col-md-4">
									<div class="p-2">
										<div class="card" style="width: 14rem;"> 
										<img class="card-img-top" src="data:image/<%=i.img.contentType%>;base64, 
								 		<%=i.img.data.toString('base64')%>" alt="Card image cap">
												<div class="card-body text-center">
													<h4 class="card-title"><%= i.name %></h4>
												</div>
												<div class="btn-group" role="group" aria-label="Basic example">
			<!-- 		EDIT AND DELETE BUTTON				 -->
										<a href="/Buysell/item/<%=i._id%>/edit" style=width:100px>
											<button class='btn btn-warning'>Edit</button>
										</a>
										<form method='post' action='/Buysell/item/<%=i._id%>?_method=DELETE'>
												<button class='btn btn-danger'>Delete</button>
										</form>	
											  </div>
										</div>
									</div>
								</div>
								 <% } %>
							</div>
							<% }) %> 

    <footer class="fotter fixed-bottom">
      <div class="container">
        <div class="row justify-content-center">             
          <div class="col-auto">
            <p>Â© Copyright 2020 IIT Jammu</p>
          </div>
        </div>
      </div>
    </footer>

    
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>